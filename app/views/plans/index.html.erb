<div class="my-5">
  <h1> Buy Rails MVP Plans</h1>
</div>

<div class="flex">

  <div class="card shadow md:w-1/3 w-full m-2">
    <div class="card-body">
      <h4>Monthly Plan</h4>
      <h6><%= "$#{@monthly_plan.amount}/#{@monthly_plan.period}" %></h6>
      <%= link_to 'Subscribe', new_credit_card_path + '?plan=monthly', class: 'btn btn-primary' %>

    </div>
  </div>

  <div class="card shadow md:w-1/3 w-full m-2">
    <div class="card-body">
      <h4>Yearly Plan</h4>
      <h6><%= "$#{@yearly_plan.amount}/#{@yearly_plan.period}" %></h6>
      <%= link_to 'Subscribe', new_credit_card_path + '?plan=yearly', class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="card shadow md:w-1/3 w-full m-2">
    <div class="card-body">
      <h4>Buy now</h4>
      <h6>$99 one time payment</h6>
      <%= link_to 'Buy', new_credit_card_path, class: 'btn btn-primary' %>
    </div>
  </div>

</div>