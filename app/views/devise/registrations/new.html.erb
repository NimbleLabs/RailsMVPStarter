<div class="row justify-content-md-center my-4">
  <div class="col-12 col-md-5">

    <% if @invitation.blank? && session[:invitation_uuid].present? %>
      <% @invitation = Invitation.find_by_uuid(session[:invitation_uuid]) %>
    <% end %>

    <div class="card shadow-lg">
      <div class="card-body">

        <h1 class="display-6 mt-2 mb-4 text-center">Get Started!</h1>

        <% google_callback_path = api_v1_process_google_oauth_url %>

        <% if @invitation.present? %>
          <% google_callback_path = api_v1_process_google_oauth_url(invitation_uuid: @invitation.uuid) %>
        <% end %>

        <%= google_sign_in_button class: 'btn btn-blue w-100 rounded-pill', proceed_to: google_callback_path do %>
          <%= image_tag('google.png', alt: 'Google', width: 32, height: 32) %>
          <span class="p-2">Sign up with Google</span>
        <% end %>

        <%= render 'devise/shared/or_content' %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <% if @invitation.present? %>
            <h4 class="mt-2 mb-4 text-center">You're Invited!</h4>

            <div class="mb-3 form-container">
              <label class="label">
                <span class="label-text">Email: <%= @invitation.email %></span>
              </label>
            </div>
            <div class="mb-3 form-container">
              <%= f.text_field :name, autofocus: true, class: "form-control input input-bordered", placeholder: 'Name' %>
            </div>
          <% else %>
            <div class="mb-3 form-container">
              <%= f.text_field :company_name, autofocus: true, class: "form-control input input-bordered", placeholder: 'Company' %>
            </div>
            <div class="mb-3 form-container">
              <%= f.text_field :name, autofocus: true, class: "form-control input input-bordered", placeholder: 'Name' %>
            </div>
            <div class="mb-3 form-container">
              <%= f.email_field :email, autocomplete: "email", class: "form-control input input-bordered", placeholder: 'Email' %>
            </div>
          <% end %>

          <div class="mb-3 form-container">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control input input-bordered", placeholder: 'Password' %>

            <% if @minimum_password_length %>
              <div id="passwordHelpBlock" class="form-text">
                Your password must be at least <%= @minimum_password_length %> characters long.
              </div>
            <% end %>

          </div>

          <% if @invitation.present? %>
            <%= f.hidden_field(:invitation_uuid, value: @invitation.uuid) %>
            <%= f.hidden_field(:email, value: @invitation.email) %>
          <% end %>

          <div class="actions mt-2">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-min rounded-pill' %>
          </div>
        <% end %>

        <% if @invitation.blank? %>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>

  </div>
</div>