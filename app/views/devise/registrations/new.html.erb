<h2>Sign up</h2>

<%= google_sign_in_button 'Sign up with Google account', class: 'btn btn-primary', proceed_to: api_v1_process_google_oauth_url %>

<h4 class="my-4"> or </h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3 form-container">
    <%= f.label :name, class: "form-label label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control input input-bordered"  %>
  </div>

  <div class="mb-3 form-container">
    <%= f.label :email, class: "form-label label" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control input input-bordered" %>
  </div>

  <div class="mb-3 form-container">
    <%= f.label :password, class: "form-label label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control input input-bordered" %>
  </div>

  <div class="mb-3 form-container">
    <%= f.label :password_confirmation, class: "form-label label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input input-bordered" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
