<div class="row justify-content-md-center my-4">
  <div class="col-12 col-md-5">

    <div class="card shadow-lg">
      <div class="card-body">

        <h1 class="display-6 mt-2 mb-4 text-center">Change your password</h1>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3 form-container">
            <%= f.label :password, "New password", class: "form-label" %><br/>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br/>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control input input-bordered" %>
          </div>

          <div class="mb-3 form-container">
            <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input input-bordered" %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: 'btn btn-primary rounded-pill' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>